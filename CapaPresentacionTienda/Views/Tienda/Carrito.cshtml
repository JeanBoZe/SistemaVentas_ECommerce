
@{
    ViewBag.Title = "Carrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row">

        <div class="col-sm-12">

            <div class="card">

                <div class="card-body">

                    <div class="row">

                        <!--Detalle Producto-->
                        <div class="col-9">

                            <div class="me-2">

                                <div class="d-flex justify-content-between">
                                    <h5 class="ms-2 mt-2">Detalle Carrito</h5>
                                    <a class="btn btn-primary" href="@Url.Action("Index","Tienda")"><i class="fas fa-cart-plus"></i> Seguir Comprando</a>
                                </div>

                                <hr class="mt-2 mb-2">

                                <div id="productos-carrito">

                                    <div class="card mb-2 card-producto">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-sm-2 align-self-center d-flex justify-content-center">

                                                    <img class="rounded" src="" style="width:100px;height:100px" />

                                                </div>

                                                <div class="col-sm-4 align-self-center">
                                                    <span class="font-wigth-bold d-block">Marca</span>
                                                    <span>Nombre Producto</span>
                                                </div>

                                                <div class="col-sm-2 align-self-center">
                                                    <span>Precio : S/. 1500</span>
                                                </div>

                                                <div class="col-sm-2 align-self-center">
                                                    <div class="d-flex">

                                                        <button class="btn btn-outline-secondary btn-restar rounded-0">
                                                            <i class="fas fa-minus"></i>
                                                        </button>
                                                        <input class="form-control input-cantidad p-1 text-center rounded-0" readonly style="width:40px" />
                                                        <button class="btn btn-outline-secondary btn-sumar rounded-0">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                <div class="col-sm-2 align-self-center">
                                                    <button class="btn btn-outline-danger btn-eliminar"><i class="far fa-trash-alt"></i> Eliminar</button>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class=" d-flex justify-content-end">

                                    <label class="align-self-center"><b>Total: S/. <span id="total">500</span></b></label>
                                </div>

                            </div>

                        </div>
                        <!--Detalle Ennvio-->
                        <div class="col-sm-3">
                            <div class="card">
                                <div class="card-body bg-light">
                                    <h5 class="card-title">Detalle Envio</h5>
                                    <form>
                                        <div class="mb-2">
                                            <label for="cbodepartamento" class="form-label">Departamento: </label>
                                            <select class="form-select form-select-sm" id="cbodepartamento"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cboprovincia" class="form-label">Provincia: </label>
                                            <select class="form-select form-select-sm" id="cboprovincia"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="cbodistrito" class="form-label">Distrito: </label>
                                            <select class="form-select form-select-sm" id="cbodistrito"></select>
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail" class="form-label">Nombre Contacto: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtnombrecontacto" autocomplete="off"></input>
                                        </div>
                                        <div class="mb-2">
                                            <label for="exampleInputEmail" class="form-label">Direccion: </label>
                                            <input type="text" class="form-control form-control-sm" id="txtdireccion" autocomplete="off"></input>
                                        </div>
                                        <div class="mb-2">
                                            <label for="txttelefono" class="form-label">Telefono: </label>
                                            <input type="text" class="form-control form-control-sm" id="txttelefono" autocomplete="off"></input>
                                        </div>
                                        <div class="d-grid">
                                            <button class="btn btn-success" type="button" onclick="RealizarPago()">
                                                <i class="fab fa-paypal"></i> Terminar y Procesar Pago
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {

            // ==========================================
            // 1. CARGAR PRODUCTOS DEL CARRITO
            // ==========================================
            jQuery.ajax({
                url: '@Url.Action("ListarProductosCarrito", "Tienda")',
                type: "POST",
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    $("#productos-carrito").html("");
                    $("#productos-carrito").LoadingOverlay("hide");

                    $.each(response.data, function (i, item) {
                        $("<div>").addClass("card mb-2 card-producto").append(
                            $("<div>").addClass("card-body").append(
                                $("<div>").addClass("row").append(
                                    // Imagen
                                    $("<div>").addClass("col-sm-2 align-self-center d-flex justify-content-center").append(
                                        $("<img>").addClass("rounded")
                                            .css({ "width": "100px", "height": "100px", "object-fit": "contain" })
                                            .attr({ "src": "data:image/" + item.oProducto.Extension + ";base64," + item.oProducto.Base64 })
                                    ),
                                    // Nombre y Marca
                                    $("<div>").addClass("col-sm-4 align-self-center").append(
                                        $("<span>").addClass("font-weight-bold d-block").text(item.oProducto.oMarca.MAR_DESCRIPCION),
                                        $("<span>").text(item.oProducto.PROD_NOMBRE)
                                    ),
                                    // Precio
                                    $("<div>").addClass("col-sm-2 align-self-center").append(
                                        $("<span>").text("$" + item.oProducto.PROD_PRECIO.toFixed(2) + " MXN")
                                    ),
                                    // Botones Cantidad
                                    $("<div>").addClass("col-sm-2 align-self-center").append(
                                        $("<div>").addClass("d-flex").append(
                                            $("<button>").addClass("btn btn-outline-secondary btn-restar rounded-0").append($("<i>").addClass("fas fa-minus")),
                                            $("<input>").addClass("form-control input-cantidad p-1 text-center rounded-0").attr({ "disabled": "disabled" }).css({ "width": "40px" })
                                                .data("oProducto", item.oProducto).val(item.CARRITO_CANTIDAD),
                                            $("<button>").addClass("btn btn-outline-secondary btn-sumar rounded-0").append($("<i>").addClass("fas fa-plus"))
                                        )
                                    ),
                                    // Botón Eliminar
                                    $("<div>").addClass("col-sm-2 align-self-center").append(
                                        $("<button>").addClass("btn btn-outline-danger btn-eliminar").append($("<i>").addClass("far fa-trash-alt"), " Eliminar").data("idproducto", item.oProducto.PROD_ID)
                                    )
                                )
                            )
                        ).appendTo("#productos-carrito");
                    });
                    sumarTotal();
                },
                error: function (error) { $("#productos-carrito").LoadingOverlay("hide"); },
                beforeSend: function () { $("#productos-carrito").LoadingOverlay("show"); }
            });

            // ==========================================
            // 2. LÓGICA UBIGEO (CORREGIDA)
            // ==========================================

            // Cargar Departamentos al iniciar
            ListarDepartamento();

            function ListarDepartamento() {
                $("#cbodepartamento").html("<option value=''>Seleccionar</option>");

                jQuery.ajax({
                    url: '@Url.Action("ObtenerDepartamento", "Tienda")',
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        // CORRECCIÓN 1: Usamos 'data.data' en lugar de 'data.lista'
                        if (data.data != null) {
                            $.each(data.data, function (i, item) {
                                // CORRECCIÓN 2: Probamos ambos nombres de propiedad por si acaso
                                // Intenta con IdDepartamento, si falla usa DEP_ID
                                var id = item.IdDepartamento || item.DEP_ID;
                                var desc = item.Descripcion || item.DEP_DESCRIPCION;

                                $("<option>").attr({ "value": id }).text(desc).appendTo("#cbodepartamento");
                            });
                        }
                    }
                });
            }

            $("#cbodepartamento").on("change", function () {
                ListarProvincia();
            });

            function ListarProvincia() {
                $("#cboprovincia").html("<option value=''>Seleccionar</option>");
                $("#cbodistrito").html("<option value=''>Seleccionar</option>");

                var idDep = $("#cbodepartamento").val();
                if(idDep == "") return;

                jQuery.ajax({
                    url: '@Url.Action("ObtenerProvincia", "Tienda")',
                    type: "POST",
                    data: JSON.stringify({ IdDepartamento: idDep }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.data != null) {
                            $.each(data.data, function (i, item) {
                                var id = item.IdProvincia || item.PROV_ID || item.PROVI_ID;
                                var desc = item.Descripcion || item.PROV_DESCRIPCION || item.PROVI_DESCRIPCION;
                                $("<option>").attr({ "value": id }).text(desc).appendTo("#cboprovincia");
                            });
                            // No llamamos a Distrito automáticamente, esperamos el cambio
                        }
                    }
                });
            }

            $("#cboprovincia").on("change", function () {
                ListarDistrito();
            });

            function ListarDistrito() {
                $("#cbodistrito").html("<option value=''>Seleccionar</option>");

                var idDep = $("#cbodepartamento").val();
                var idProv = $("#cboprovincia").val();
                if(idProv == "") return;

                jQuery.ajax({
                    url: '@Url.Action("ObtenerDistrito", "Tienda")',
                    type: "POST",
                    data: JSON.stringify({ IdDepartamento: idDep, IdProvincia: idProv }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.data != null) {
                            $.each(data.data, function (i, item) {
                                var id = item.IdDistrito || item.DIST_ID;
                                var desc = item.Descripcion || item.DIST_DESCRIPCION;
                                $("<option>").attr({ "value": id }).text(desc).appendTo("#cbodistrito");
                            });
                        }
                    }
                });
            }

            // ... (Aquí sigue tu función sumarTotal y eventos de botones que ya tenías) ...
            function sumarTotal() {
                var sumaTotal = parseFloat(0);
                $("input.input-cantidad").each(function (i) {
                    var precio = $(this).data("oProducto").PROD_PRECIO;
                    var cantidad = parseFloat($(this).val());
                    sumaTotal += precio * cantidad;
                });
                $("#total").text(sumaTotal.toFixed(2));
                $("#total").data("sumatotal", sumaTotal);
            }

            // ==========================================
            // 3. EVENTOS DE BOTONES (SUMAR / RESTAR / ELIMINAR)
            // ==========================================

            // BOTÓN SUMAR (+)
            $(document).on("click", ".btn-sumar", function () {
                var div_contenedor = $(this).parent("div.d-flex");
                var input_cantidad = $(div_contenedor).find("input.input-cantidad");
                var btn = $(this);
                var idproducto = $(input_cantidad).data("oProducto").PROD_ID;

                jQuery.ajax({
                    url: '@Url.Action("OperacionCarrito","Tienda")',
                    type: "POST",
                    data: JSON.stringify({ idproducto: idproducto, sumar: true }), // TRUE = SUMAR
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        $(btn).LoadingOverlay("hide");
                        if (data.respuesta) {
                            var cantidad = parseInt($(input_cantidad).val()) + 1;
                            $(input_cantidad).val(cantidad);
                            sumarTotal();
                        } else {
                            swal("", data.mensaje, "warning");
                        }
                    },
                    beforeSend: function () { $(btn).LoadingOverlay("show"); },
                    error: function (error) { $(btn).LoadingOverlay("hide"); }
                });
            });

            // BOTÓN RESTAR (-)
            $(document).on("click", ".btn-restar", function () {
                var div_contenedor = $(this).parent("div.d-flex");
                var input_cantidad = $(div_contenedor).find("input.input-cantidad");
                var btn = $(this);
                var idproducto = $(input_cantidad).data("oProducto").PROD_ID;
                var cantidad = parseInt($(input_cantidad).val()) - 1;

                if (cantidad >= 1) {
                    jQuery.ajax({
                        url: '@Url.Action("OperacionCarrito","Tienda")',
                        type: "POST",
                        data: JSON.stringify({ idproducto: idproducto, sumar: false }), // FALSE = RESTAR
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            $(btn).LoadingOverlay("hide");
                            if (data.respuesta) {
                                $(input_cantidad).val(cantidad);
                                sumarTotal();
                            } else {
                                swal("", data.mensaje, "warning");
                            }
                        },
                        beforeSend: function () { $(btn).LoadingOverlay("show"); },
                        error: function (error) { $(btn).LoadingOverlay("hide"); }
                    });
                }
            });

            // BOTÓN ELIMINAR
            $(document).on("click", ".btn-eliminar", function () {
                var idproducto = $(this).data("idproducto");
                var card_producto = $(this).parents("div.card-producto");

                jQuery.ajax({
                    url: '@Url.Action("EliminarCarrito","Tienda")',
                    type: "POST",
                    data: JSON.stringify({ idproducto: idproducto }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.respuesta) {
                            card_producto.remove();
                            MostrarCantidadCarrito(); // Actualiza el número en el menú
                            sumarTotal();
                        } else {
                            swal("", data.mensaje, "warning");
                        }
                    }
                });
            });

            // FUNCIÓN PARA PAGAR
            window.RealizarPago = function() {
                // Aquí va tu lógica de RealizarPago (validaciones de campos vacíos, etc.)
                if (parseInt($("#total").data("sumatotal")) == 0) {
                     swal("", "No hay productos en el carrito", "warning");
                     return;
                }

                if ($("#cbodistrito").val() == "" || $("#txtnombrecontacto").val() == "" || $("#txtdireccion").val() == "" || $("#txttelefono").val() == "") {
                    swal("", "Debe completar los datos de envío", "warning");
                    return;
                }

                // ... resto de tu lógica de pago ...
            }
        });
    </script>
}

