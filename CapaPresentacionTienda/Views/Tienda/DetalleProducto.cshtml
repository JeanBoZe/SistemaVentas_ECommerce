@model CapaEntidad.Producto
@{
    ViewBag.Title = "DetalleProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // --- LÓGICA PARA CALCULAR PROMEDIO ---
    double promedio = 0;
    int totalComentarios = 0;

    if (Model.oListaComentarios != null && Model.oListaComentarios.Count > 0)
    {
        // Promedio matemático (ej: 4.3)
        promedio = Model.oListaComentarios.Average(c => c.COM_PUNTUACION);
        totalComentarios = Model.oListaComentarios.Count;
    }

    // Redondear a 1 decimal para mostrar (ej: 4.3)
    promedio = Math.Round(promedio, 1);

    // Calcular estrellas llenas (ej: 4)
    int estrellasLlenas = (int)promedio;

    // Calcular si lleva media estrella (si el decimal es .5 o mayor)
    bool mediaEstrella = (promedio - estrellasLlenas) >= 0.5;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">

            <div class="col-md-6 text-center">
                <img class="card-img-top mb-5 mb-md-0"
                     src="data:image/@Html.DisplayTextFor(m => m.Extension);base64,@Html.DisplayTextFor(m => m.Base64)"
                     alt="@Html.DisplayTextFor(m => m.PROD_NOMBRE)"
                     style="max-height: 450px; width: auto; object-fit: contain;" />
            </div>

            <div class="col-md-6">
                <div class="small mb-1">@Html.DisplayTextFor(m => m.oMarca.MAR_DESCRIPCION)</div>
                <h1 class="display-5 fw-bolder">@Html.DisplayTextFor(m => m.PROD_NOMBRE)</h1>

                <div class="mb-3">
                    <div class="small text-warning d-flex align-items-center">

                        @if (totalComentarios > 0)
                        {
                            // Bucle del 1 al 5 para pintar las estrellas
                            for (int i = 1; i <= 5; i++)
                            {
                                if (i <= estrellasLlenas)
                                {
                                    // Estrella Llena
                                    <i class="fas fa-star"></i>
                                }
                                else if (i == estrellasLlenas + 1 && mediaEstrella)
                                {
                                    // Media Estrella (si tienes FontAwesome 5+)
                                    <i class="fas fa-star-half-alt"></i>
                                }
                                else
                                {
                                    // Estrella Vacía
                                    <i class="far fa-star"></i>
                                }
                            }
                            // Texto del promedio
                            <span class="ms-2 text-muted">(@promedio) basado en @totalComentarios reseñas</span>
                        }
                        else
                        {
                            // Si no hay comentarios
                            <i class="far fa-star text-muted"></i>
                            <i class="far fa-star text-muted"></i>
                            <i class="far fa-star text-muted"></i>
                            <i class="far fa-star text-muted"></i>
                            <i class="far fa-star text-muted"></i>
                            <span class="ms-2 text-muted">Sin calificaciones aún</span>
                        }
                    </div>
                </div>
                <div class="fs-5 mb-5">
                    <div class="fs-5 mb-5">
                        <span>$@Html.DisplayTextFor(m => m.PROD_PRECIO) MXN</span>
                    </div>

                    <p class="lead">@Html.DisplayTextFor(m => m.PROD_DESCRIPCION)</p>

                    <div class="d-flex">
                        <a href="@Url.Action("Index","Tienda")" class="btn btn-danger w-50 text-center me-3">
                            <i class="fas fa-undo-alt"></i> Volver
                        </a>

                        @if (Session["Cliente"] != null)
                        {
                            <button class="btn btn-success agregarcarrito flex-shink-0 w-50" type="button" data-idproducto="@Html.DisplayTextFor(m => m.PROD_ID)">
                                <i class="fas fa-cart-plus"></i> Agregar al carrito
                            </button>
                        }
                    </div>
                </div>
            </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5">
        <h2 class="fw-bolder mb-4">Opiniones de los clientes</h2>

        @if (Session["Cliente"] != null)
        {
            <div class="card mb-5 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Deja tu opinión</h5>
                    <p class="text-muted small">Haz clic en las estrellas para calificar.</p>

                    <form id="formComentario">
                        <div class="mb-3">
                            <div class="d-flex align-items-center" id="contenedor-estrellas" style="cursor: pointer;">
                                <i class="far fa-star text-warning fs-3 me-1 star-rating" data-value="1"></i>
                                <i class="far fa-star text-warning fs-3 me-1 star-rating" data-value="2"></i>
                                <i class="far fa-star text-warning fs-3 me-1 star-rating" data-value="3"></i>
                                <i class="far fa-star text-warning fs-3 me-1 star-rating" data-value="4"></i>
                                <i class="far fa-star text-warning fs-3 me-1 star-rating" data-value="5"></i>
                                <span class="ms-2 fw-bold text-warning" id="texto-calificacion">0/5</span>
                            </div>
                            <input type="hidden" id="puntuacionInput" value="0">
                        </div>

                        <div class="mb-3">
                            <textarea class="form-control" id="txtComentario" rows="3" placeholder="Escribe aquí tu experiencia con el producto..."></textarea>
                        </div>

                        <button type="button" class="btn btn-primary" id="btnEnviarComentario">
                            Publicar Reseña
                        </button>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mb-5">
                Para dejar una reseña, por favor <a href="@Url.Action("Index", "Acceso")" class="fw-bold">inicia sesión</a>.
            </div>
        }

        <div id="lista-comentarios">
            @if (Model.oListaComentarios != null && Model.oListaComentarios.Count > 0)
            {
                foreach (var item in Model.oListaComentarios)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-user-circle fa-2x me-2 text-secondary"></i>
                                    <h6 class="fw-bold mb-0">@item.NombreCliente</h6>
                                </div>
                                <div class="text-warning small">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.COM_PUNTUACION)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    }
                                </div>
                            </div>
                            <p class="card-text mt-2">@item.COM_CONTENIDO</p>
                            <small class="text-muted">Publicado el @item.COM_FECHAREGISTRO</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-light border text-center">
                    No hay comentarios aún. ¡Sé el primero en opinar!
                </div>
            }
        </div>
    </div>
</section>


@section scripts{
    <script>
        $(document).ready(function () {

            // 1. LIMPIEZA DE EVENTOS (Para evitar conflictos anteriores)
            $(document).off("mouseenter mouseleave click", ".star-rating");
            $(document).off("mouseleave", "#contenedor-estrellas");

            // Variable para guardar la calificación
            var calificacionFija = 0;

            // =========================================================
            // LÓGICA SOLO CLICK (Sin Hover)
            // =========================================================

            // Eliminamos los eventos "mouseenter" y "mouseleave" para que no parpadeen

            $(document).on("click", ".star-rating", function () {
                // 1. Guardamos el valor de la estrella clickeada
                calificacionFija = parseInt($(this).data("value"));

                // 2. Lo enviamos al input oculto
                $("#puntuacionInput").val(calificacionFija);

                // 3. Actualizamos el texto
                $("#texto-calificacion").text(calificacionFija + "/5");

                // 4. Pintamos las estrellas permanentemente
                pintarEstrellas(calificacionFija);

                // Pequeña animación visual
                $(this).fadeOut(100).fadeIn(100);
            });

            // FUNCIÓN DE PINTADO
            function pintarEstrellas(cantidad) {
                $(".star-rating").each(function () {
                    var estrella = $(this);
                    var valorEstrella = parseInt(estrella.data("value"));

                    // Limpiamos clases
                    estrella.removeClass("fas far text-warning");

                    if (valorEstrella <= cantidad) {
                        // Si es menor o igual a lo que clickeaste: PINTADA
                        estrella.addClass("fas text-warning");
                    } else {
                        // Si es mayor: VACÍA
                        estrella.addClass("far text-warning");
                    }
                });
            }

            // =========================================================
            // BOTÓN ENVIAR (Igual que antes)
            // =========================================================
            $("#btnEnviarComentario").on("click", function () {
                var comentario = $("#txtComentario").val();
                var puntuacion = $("#puntuacionInput").val();
                var idProd = '@Html.DisplayTextFor(m => m.PROD_ID)';

                if (puntuacion == 0) {
                    swal("Falta información", "Selecciona las estrellas para calificar", "warning");
                    return;
                }
                if (comentario.trim() == "") {
                    swal("Falta información", "Escribe un comentario", "warning");
                    return;
                }

                jQuery.ajax({
                    url: '@Url.Action("GuardarComentario", "Tienda")',
                    type: "POST",
                    data: JSON.stringify({ contenido: comentario, puntuacion: puntuacion, idproducto: idProd }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.resultado) {
                            swal("¡Éxito!", "Tu reseña se ha publicado", "success");
                            setTimeout(function () { location.reload(); }, 1500);
                        } else {
                            swal("Error", data.mensaje, "error");
                        }
                    }
                });
            });

            // =========================================================
            // CARRITO (Igual que antes)
            // =========================================================
            $(document).on("click", "button.agregarcarrito", function () {
                jQuery.ajax({
                    url: '@Url.Action("AgregarCarrito", "Tienda")',
                    type: "POST",
                    data: JSON.stringify({ idproducto: $(this).data("idproducto") }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        if (data.respuesta) {
                            MostrarCantidadCarrito();
                            swal("", "Agregado al carrito", "success");
                        } else {
                            swal("", data.mensaje, "warning");
                        }
                    }
                });
            });

        });
    </script>
}