
@{
    ViewBag.Title = "Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Categorias</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Lista de Categorias
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success mb-3" onclick="AbrirModal(null)">Crear Nuevo</button>
            </div>
            <hr />
            <table id="tbl_usuarios" class="display cell-border" style="width:100%">

                <thead>
                    <tr>
                        <th>Descripcion</th>
                        <th>Activo</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>

    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Categoria</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txt_id" type="hidden" value="0" />

                <div class="row g-1">
                    <!--Para que esten en la misma fila-->
                    <div class="col-sm-6">
                        <label for="txt_correo" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="txt_descripcion" placeholder="Monitores" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>



                </div>
                <!--Mensaje de Alerta-->
                <div class="row mt-2">
                    <!--Para que esten en la misma fila-->
                    <div class="col-12">
                        <div id="mensaje_error" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarUsuario()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        tabladata = $("#tbl_usuarios").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: "/Mantenedor/ListarCategorias",
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "CAT_DESCRIPCION" },
                {
                    "data": "CAT_ACTIVO", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>'
                        } else {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false, //que la columna de los botones no importe su orden, por que son solo botones
                    "searchable": false, // que no busque en la columna de los botones
                    "width":"90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json"
            }
        });
        function AbrirModal(json) {

            $("#txt_id").val(0);
            $("#txt_descripcion").val("");
            $("#cboactivo").val(1);

            $("#mensaje_error").hide();// ocultar alerta de error

            if (json != null) {
                $("#txt_id").val(json.CAT_ID)
                $("#txt_descripcion").val(json.CAT_DESCRIPCION);
                $("#cboactivo").val(json.CAT_ACTIVO == true ?1:0);
            }

            $("#FormModal").modal("show");
        }
        $("#tbl_usuarios tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");//mandar llamar la fila que seleccione
            var data = tabladata.row(filaSeleccionada).data();//seleccionar todos los datos de la fila clickeada

            AbrirModal(data)

        })

        $("#tbl_usuarios tbody").on("click", '.btn-eliminar', function () {

            var categoriaSeleccionada = $(this).closest("tr");//mandar llamar la fila que seleccione
            var data = tabladata.row(categoriaSeleccionada).data();//seleccionar todos los datos de la fila clickeada

            swal({
                title: "Estas Seguro?",
                text: "Si lo eliminas, no lo podras recuperar!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true

            },
            function () {
                jQuery.ajax({
                    url: '@Url.Action("EliminarCategoria", "Mantenedor")',
                    type: 'POST',
                    data: JSON.stringify({ id: data.CAT_ID }),//stringify es una funcion para convertir a texto el JSON
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {//data es un parametro para recibir en este caso un json creado en el home

                        if (data.resultado) {
                            tabladata.row(categoriaSeleccionada).remove().draw();
                        }
                        else {
                            swal("No se pudo eliminar", data.mensaje, "error")
                        }

                    },
                    error: function (error) {
                        console.log(error);
                        $(".modal-body").LoadingOverlay("hide");
                        $("#mensaje_error").text("Error Ajax");
                        $("#mensaje_error").show();
                    }
                });

            });

        });

        function GuardarUsuario() {

            var categoria = {

                CAT_ID: $("#txt_id").val(),
                CAT_ACTIVO: $("#cboactivo").val() == 1 ? true : false,
                CAT_DESCRIPCION: $("#txt_descripcion").val(),

            }

            jQuery.ajax({
                url: '@Url.Action("GuardarCategoria", "Mantenedor")',
                type: 'POST',
                data: JSON.stringify({ objeto: categoria }),//stringify es una funcion para convertir a texto el JSON
                dataType: 'json',
                contentType: "application/json; charset=utf-8",
                success: function (data) {//data es un parametro para recibir en este caso un json creado en el home

                    $(".modal-body").LoadingOverlay("hide");
                    if (categoria.CAT_ID == 0) {//crear categoria

                        if (data.resultado != 0) {
                            categoria.CAT_ID = data.resultado;
                            tabladata.row.add(categoria).draw(false)
                            $("#FormModal").modal("hide");
                        }
                        else {
                            $("#mensaje_error").text(data.mensaje);
                            $("#mensaje_error").show();

                        }
                    } else {//editar categoria

                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(categoria).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        }
                        else {
                            $("#mensaje_error").text(data.mensaje);
                            $("#mensaje_error").show();

                        }
                    }

                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensaje_error").text("Error Ajax");
                    $("#mensaje_error").show();
                },
                beforeSend: function () {//para poner que es lo que queremos que haga mientras se ejecutan las acciones de arriba, como un gif de cargar
                    // Loading mientras guarda y manda correo
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 14
                    });
                }
                });
        }
    </script>
}

